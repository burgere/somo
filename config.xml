<?xml version='1.0' encoding='utf-8'?>
<widget id="com.github.somo" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>SOMO</name>
    <description>
        A social emotional learning app for students K-8.
    </description>
    <author>
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="FadeSplashScreen" value="false" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="StatusBarBackgroundColor" value="#fc8264" />
    <platform name="android">
        <allow-intent href="market:*" />

        <splash src="www/img/res/screens/android/screen-hdpi-portrait.png" density="port-hdpi"/>
        <splash src="www/img/res/screens/android/screen-ldpi-portrait.png" density="port-ldpi"/>
        <splash src="www/img/res/screens/android/screen-mdpi-portrait.png" density="port-mdpi"/>
        <splash src="www/img/res/screens/android/screen-xhdpi-portrait.png" density="port-xhdpi"/>

        <icon src="www/img/res/icons/android/icon-36-ldpi.png" density="ldpi" />
        <icon src="www/img/res/icons/android/icon-48-mdpi.png" density="mdpi" />
        <icon src="www/img/res/icons/android/icon-72-hdpi.png" density="hdpi" />
        <icon src="www/img/res/icons/android/icon-96-xhdpi.png" density="xhdpi" />
        <icon src="www/img/res/icons/android/icon-144-xxhdpi.png" density="xxhdpi" />
        <icon src="www/img/res/icons/android/icon-192-mdpi.png" density="xxxhdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />

        <splash src="www/img/res/screens/ios/screen-iphone-portrait.png" width="320" height="480" />
        <splash src="www/img/res/screens/ios/screen-iphone-portrait-2x.png" width="640" height="960" />
        <splash src="www/img/res/screens/ios/screen-ipad-portrait.png" width="768" height="1024"/>
        <splash src="www/img/res/screens/ios/screen-ipad-portrait-2x.png" width="1536" height="2048"/>
        <splash src="www/img/res/screens/ios/screen-iphone-portrait-568h-2x.png" width="640" height="1136"/>
        <splash src="www/img/res/screens/ios/screen-iphone-portrait-667h.png" width="750" height="1334"/>
        <splash src="www/img/res/screens/ios/screen-iphone-portrait-736h.png" width="1242" height="2208"/>

    </platform>
    <plugin name="cordova-plugin-statusbar" spec="~2.1.2" />
    <plugin name="cordova-plugin-splashscreen" spec="~3.2.1" />
    <engine name="ios" spec="~4.1.0" />
    <engine name="android" spec="~5.1.1" />
    <engine name="windows" spec="~4.3.1" />
</widget>
